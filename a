[32m+[m
[32m+[m[32mdocument.querySelector(".busca").addEventListener("submit", async (event) => {[m
[32m+[m[32m  event.preventDefault();[m
[32m+[m[32m  console.log(searchElement);[m
[32m+[m
[32m+[m[32m  if (searchElement.value !== "") {[m
[32m+[m[32m    showWarning("Carregando...");[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  let url = `https://api.openweathermap.org/data/2.5/weather?q=${encodeURI(searchElement)}&appid=bfeb5fc772efa63c919fd3398b87e9a7&units=metric&lang=pt_br`;[m
[32m+[m
[32m+[m[32m  let results = await fetch(url);[m
[32m+[m[32m  let json = await results.json();[m
[32m+[m
[32m+[m[32m  if (json.cod === 200) {[m
[32m+[m[32m    clearInfo();[m
[32m+[m[32m    showInfo({[m
[32m+[m[32m      name: json.name,[m
[32m+[m[32m      country: json.sys.country,[m
[32m+[m[32m      temp: json.main.temp,[m
[32m+[m[32m      tempIcon: json.weather[0].icon,[m
[32m+[m[32m      windSpeed: json.wind.speed,[m
[32m+[m[32m      windAngle: json.wind.deg,[m
[32m+[m[32m    });[m
[32m+[m[32m  } else {[m
[32m+[m[32m    showWarning("NÃ£o encontramos esta localizaÃ§Ã£o");[m
[32m+[m[32m  }[m
[32m+[m[32m});[m
[32m+[m
[32m+[m[32mfunction showInfo(json) {[m
[32m+[m[32m  console.log(json);[m
[32m+[m[32m  resultado.style.display = "block";[m
[32m+[m[32m  titulo.innerHTML = `${json.name}, ${json.country}`;[m
[32m+[m[32m  temp.innerHTML = `${json.temp}`;[m
[32m+[m[32m  wind.innerHTML = `${json.windSpeed}`;[m
[32m+[m[32m  img.setAttribute([m
[32m+[m[32m    "src",[m
[32m+[m[32m    `http://openweathermap.org/img/wn/${json.tempIcon}.png`[m
[32m+[m[32m  );[m
[32m+[m[32m  windImg.style.transform = `rotate(${json.windAngle}deg)`;[m
[32m+[m[32m  console.log(`${json.windAngle}`);[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mfunction clearInfo(){[m
[32m+[m[32m    showWarning('');[m
[32m+[m[32m    resultado.style.display = 'none';[m
[32m+[m[32m}[m
